<%= form_with url: weather_path, html: { id: 'weather', 'data-turbo' => "false" } do |form| %>
  <div class='form-group'>
    <%= form.label :query, 'Weather forecast for:' %>
    <%= form.text_field :zip_code, placeholder: 'Zip Code' %>
  </div>
  <%= form.submit 'Search', class: 'btn btn-primary mt-3' %>
<% end %>
